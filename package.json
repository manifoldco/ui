{
  "name": "@manifoldco/ui",
  "version": "0.0.3-0",
  "description": "Manifold UI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manifoldco/ui.git"
  },
  "homepage": "https://github.com/manifoldco/ui",
  "bugs": {
    "url": "https://github.com/manifoldco/ui/issues"
  },
  "files": [
    "dist/"
  ],
  "main": "dist/manifold.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "author": "manifoldco",
  "license": "ISC",
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --docs --watch --serve",
    "postbuild": "npm run generate:docs",
    "format": "npm run format:ts && npm run format:css",
    "format:html": "prettier src/index.html --write",
    "format:css": "stylelint 'src/**/*.css' --fix",
    "format:css:watch": "npx onchange 'src/**/*.css' -- npm run format:css",
    "format:ts": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:watch": "npx onchange 'src/**/*.{css,ts,tsx}' -- npm run format",
    "generate:docs": "node scripts/docs",
    "postgenerate:docs": "npm run format:html",
    "generate:docs:watch": "npx onchange 'src/**/readme.md' -- npm run generate:docs",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.ts,.tsx src",
    "lint:css": "stylelint 'src/**/*.css'",
    "prepublish": "npm run build",
    "publish:major": "npm version major && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "publish:rc": "npm version prepatch && npm publish --tag next",
    "start": "NODE_ENV=production npx serve -l \"tcp://0.0.0.0:$PORT\" -s www",
    "test": "stencil test --spec --e2e",
    "test:coverage": "stencil test --spec --e2e --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/stencil test --spec --e2e --runInBand",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "dependencies": {
    "@stencil/core": "~0.18.0",
    "@stencil/postcss": "^0.1.0",
    "@typescript-eslint/parser": "^1.1.1",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "postcss-preset-env": "^6.5.0",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "0.0.4",
    "stylelint-config-standard": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/puppeteer": "1.11.2",
    "prettier": "^1.16.4",
    "puppeteer": "1.11.0",
    "showdown": "^1.9.0"
  }
}
